<main>

    <div class="inicio">


        <div class="saludo">
            <script> horario(hora);</script><span class="usuario-novedades">{{usuario}}!</span> ¿Qué novedades hay para
            hoy?
        </div>

        <div class="cerrar">
            <a href="/admin/login/logout" class="btn-danger cerrarses"><i class="fas fa-sign-out-alt"></i> Cerrar
                Sesión</a>
        </div>
    </div>


    <div class="nuevo">
        <div>
            <h4>Novedades</h4>
        </div>



        <div> <a href="/admin/novedades/agregar" class="nuevobtn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
        </div>
    </div>

    {{#if search}}
    <div class="d-none d-sm-block search">
        <form action="novedades" method="get">

            <label for="search" class="button-search">
                <i class="fa fa-search" aria-hidden="true"></i>
            </label>
            <input type="search" id="search" placeholder="Buscar" name="q" {{#if q}}value="{{q}}" {{/if}}
                oninput="crossSearch()"></input>
            <div class="cross-search">
                <a href="/admin/novedades" class=" fa fa-times-circle" aria-hidden="true"
                    id="cross-search"></a>
            </div>

            {{#if cross_search}}
            <div class="cross-search-on">
                <a href="/admin/novedades" class=" fa fa-times-circle" aria-hidden="true"
                    id="cross-search-on"></a>
            </div>
            {{/if}}
        </form>
    </div>
    {{/if}}


    {{#if searchorder}}
    <div class="d-none d-sm-block search">
        <form action="../novedades" method="get">

            <label for="search" class="button-search">
                <i class="fa fa-search" aria-hidden="true"></i>
            </label>
            <input type="search" id="search" placeholder="Buscar" name="q" {{#if q}}value="{{q}}"
                {{/if}}oninput="crossSearch()"></input>
            <a href="/admin/novedades" class="cross-search fa fa-times-circle" aria-hidden="true" id="cross-search"></a>
        </form>
    </div>
    {{/if}}
    <div class="d-sm-none search">
        <form action="novedades" method="get">

            <label for="search" class="button-search">
                <i class="fa fa-search" aria-hidden="true"></i>
            </label>
            <input type="search" id="search" placeholder="Buscar" name="q" {{#if q}}value="{{q}}" {{/if}}
                oninput="crossSearch()"></input>
            <a href="/admin/novedades" class="cross-search fa fa-times-circle" aria-hidden="true" id="cross-search"></a>
        </form>
    </div>




    {{!-- INICIO TABLA --}}
    <table class="table table-striped">
        <thead class="thead">
            <tr>
                <th scope="col" class="col-1">
                    {{#if orderDesc}}
                    <a href="/admin/novedades/asc" id="orderById">Id</a>
                    {{/if}}
                    {{#if orderAsc}}
                    <a href="/admin/novedades" id="orderById">Id</a>
                    {{/if}}

                </th>
                <th scope="col" class="col-5">Título</i></th>
                <th scope="col" class="col-5">
                    {{#if orderDesc}}
                    <a href="/admin/novedades/fhasc" id="orderById">Fecha y Hora</a>
                    {{/if}}

                    {{#if orderAsc}}
                    <a href="/admin/novedades/fhdesc" id="orderById">Fecha y Hora</a>
                    {{/if}}


                </th>
                <th scope="col" class="acciones">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td><a href="/admin/novedades/preview/{{id}}" target="_blank">{{titulo}}</a></td>
                <th scope="row" class="fechahora">{{fechahora}} hs</th>
                <td class="acciones">

                    <a href="/admin/novedades/modificar/{{id}}"><i class="fas fa-edit"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}"><i class="fas fa-trash-alt"
                            onclick="return confirm('¿Estás seguro que quieres eliminar esta novedad?')"></i></a>

                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    {{!-- FIN TABLA --}}

    <div class="resultado">
        {{#if is_search}}
        {{#unless novedades.length}}
        No se encontraron resultados para "<b>{{q}}</b>".
        {{/unless}}
        {{/if}}
    </div>
</main>