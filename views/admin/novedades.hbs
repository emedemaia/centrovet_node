<main>
    <div class="inicio">

        <div class="saludo">
            <h6>
                <script>
                    horario(hora);
                </script> <span class="usuario-novedades">{{usuario}}!</span> ¿Qué novedades hay para hoy?
            </h6>
        </div>

        <div class="cerrar">

            <a href="/admin/login/logout" class="btn-danger cerrarses"><i class="fas fa-sign-out-alt"></i> Cerrar
                Sesión</a>
        </div>

    </div>

    <div class="nuevo">
        <div>
            <h4>Novedades</h4>
        </div>
        <div> <a href="/admin/novedades/agregar" class="nuevobtn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
        </div>
    </div>

    <div>
        <h6>Orden</h6>
        <a href="/admin/novedades/asc">Ascendente</a>
        <a href="/admin/novedades">Descendente</a>
    </div>

    <table class="table table-striped">
        <thead class="thead">
            <tr>
                <th scope="col" class="col-1">#</th>
                <th scope="col" class="col-9">Título</th>
                <th scope="col" class="acciones">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td class="acciones">

                    <a href="/admin/novedades/modificar/{{id}}"><i class="fas fa-edit"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}"><i class="fas fa-trash-alt"
                            onclick="return confirm('¿Estás seguro que quieres eliminar esta novedad?')"></i></a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</main>